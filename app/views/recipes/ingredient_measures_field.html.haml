.form-inline.clearfix
  .nested-fields
    = f.input :ingredient_name, input_html: { class: "form-input form-control" }
    = f.select :measurement_unit, IngredientMeasure::METRICS, input_html: { class: "form-input form-control" }
    = f.select :measurement_amount, input_html: { class: "form-input form-control" }
    = link_to_remove_association "Remove Ingredient", f, class: "form-button btn btn-default"
